doctype html
html(lang='ru')
  head
    title АЗПИ-2
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, user-scalable=yes')
    link(href='css/style.css', rel='stylesheet')
  body
    header.header
      div.header__registration
        div.container
          a.header__registration__enter(href="#") Вход
          a.header__registration__price-list(href="#") Прайс-лист
      div.header__main    
        div.container
          div.info
            div.info__logo
              img(src="img/logo.svg")
            div.info__delivery
              span Отправляем по всей россии<br> любой транспортной<br> компанией
              img(src="img/delivery-car.svg")
            div.contacts.info__contacts
              a.contacts__phone(href="tel:73852779483") 
                span.contacts__phone-number +7(3852)77-94-83
              a.contacts__mail(href="mailto:azpi22@bk.ru") azpi@bk.ru
            div.info__search
              form.info__search__form
                input.info__search__text(type="text",placeholder="Поиск по артикулу")
                input.info__search__submit(type="submit",value="")
            div.info__basket
              a.info__basket-link
                img.info__basket__img(src="img/cart.svg")
                span.info__basket__text В корзине 50 товаров
          nav.menu
            ul.menu__list
              li.menu__item
                a.menu__link(href="#") О компании        
              li.menu__item
                a.menu__link(href="#") Новости
              li.menu__item
                a.menu__link(href="#") Каталог
              li.menu__item
                a.menu__link(href="#") Доставка и оплата  
              li.menu__item
                  a.menu__link(href="#") Ценовая политика
              li.menu__item
                  a.menu__link(href="#") Гарантия    
              li.menu__item
                  a.menu__link(href="#") Партнёры      
              li.menu__item
                  a.menu__link(href="#") Контакты
          div.photo
            div.photo__text-block
              span.photo__text Прямые поставки <br> форсуноки распылителей <br> напрямую с завода
              a(href="#").photo__more-detailed Подробнее
            img(src="img/banner.png")
              
    section.catalog
      div.container
        div.catalog__title-block
          span.catalog__title-shadow Каталог
          h2.catalog__title Каталог
          div.catalog__title-line
          div.catalog__title-line-text Выбирайте более чем из 350 модификаций продукции!
        div.catalog__items
          - for(var x = 0; x < 4; x++)
            a(href="#").catalog__item
              img(src="img/catalog-item.jpg").catalog__item-image
              span.catalog__item-title Форсунки
        div.catalog__buttons
          div.catalog__line
          button.btn.btn__new Новинки
          button.btn.btn__popular Популярное   
                                          
    section.news
      div.container
        div.news__title-block
          span.news__title-shadow Новости
          h2.news__title Новости
          div.news__title-line
        div.news__list
          - for(var x = 0; x < 6; x++)
            a(href="#").news__item
              div.news__item__date
                span.news__item__date-day 14
                span.news__item__date-month апреля 2018
              span.news__item__text Повышение цен на продукцию АЗПИ с 1 июня 2018 года
              div.news__item__arrow
        div.news__buttons
            button.btn.btn__all-news Все новости            
             


    div.dealers
      div.container
        div.dealers__title-block
          span.dealers__title-shadow Карта дилеров
          h2.dealers__title Карта дилеров
          div.dealers__title-line
      div.dealers__map(id="map")
    footer.footer
      div.container.footer__inner
        div.footer__logo.info__logo
          img(src="img/logo.svg")
        ul.footer__menu__list
          li.footer__menu__item 
            a.footer__menu__link(href="#") О компании
          li.footer__menu__item 
            a.footer__menu__link(href="#") Каталог
          li.footer__menu__item 
            a.footer__menu__link(href="#") Ценовая политика
          li.footer__menu__item 
            a.footer__menu__link(href="#") Партнеры
          li.footer__menu__item 
            a.footer__menu__link(href="#") Новости
          li.footer__menu__item 
            a.footer__menu__link(href="#") Доставка и оплата
          li.footer__menu__item 
            a.footer__menu__link(href="#") Гарантия
          li.footer__menu__item 
            a.footer__menu__link(href="#") Контакты
        div.footer__contacts
          span.footer__contacts__phone +7(3852)77-94-83
          a.footer__contacts__mail(href="mailto:azpi22@bk.ru") azpi@bk.ru
        div.footer__address
          span 656023, РОССИЯ,<br> Алтайский край, г. Барнаул,<br> пр. Космонавтов, 6/2, офис 2      
      div.copyright
        div.container
          span.copyright__azpi 2018 © АЗПИ маркет. Все права защищены.
          span.copyright__letsrock Разработка сайта -&nbsp;&nbsp;    
                a(href='http://letsrock.pro')

